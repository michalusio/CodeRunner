<Window x:Name="MainForm" x:Class="FormClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FormClient"
        mc:Ignorable="d" Height="450" Width="800" Background="White" AllowsTransparency="True" WindowStyle="None">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="{DynamicResource {x:Static SystemParameters.CaptionHeightKey}}"
                      UseAeroCaptionButtons="True"
                      GlassFrameThickness="0 0 0 1" ResizeBorderThickness="5"/>
    </WindowChrome.WindowChrome>
    <DockPanel>
        <local:WindowTopPanel VerticalAlignment="Top" DockPanel.Dock="Top"/>
    </DockPanel>
</Window>
